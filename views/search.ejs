<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Memories</title>
        <link rel="stylesheet" href="/css/search.css">
    </head>
    <body>
        <button id="MyCollection">
            <a href="/users/home">
                <h3>
                    My Collection
                </h3>
            </a>
        </button>
        <div id="search-memory-container">
            <ul>
                <% for (memory of memories){ %>
                    <li style="list-style: none;">
                        <div class="box">
                            <img src="<%= memory.image%>" alt="Nothing found" >
                            <br>
                                <a href="/memory/download/<%= memory.id%>"> 
                                    <button type="button"  class="button">
                                        <span class="button_text">Download</span>  
                                        <span class="button_icon">
                                            <ion-icon name="cloud-download-outline"></ion-icon> 
                                        </span>
                                    </button>
                                </a>    
                            <br>
                            <button class="button" id="collections">
                                <a href="/collection/open/<%= memory.collectionRef%>">
                                <span class="button_text">Take to Collection</span>  
                                <span class="button_icon">
                                    <ion-icon name="arrow-undo-outline"></ion-icon>
                                </span>
                              </a>
                            </button>
                        </div>
                    </li>
                <% } %>
            </ul>
        </div>
        <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    </body>
</html>

